{
  "routes": {
    "/api/": {
      "proxy": {
        "to": "https://localhost:$upstream-port/upstream/",
        "upstreamRequest": {
          "headers": {
            "ignoreCorrelationId": true,
            "ignoreCallId": true
          }
        },
        "downstreamResponse": {
          "headers": {
            "includeCorrelationId": true,
            "includeCallId": true
          }
        }
      }
    }
  }
}
