{
  "routes": {
    "/api/": {
      "proxy": {
        "to": "https://localhost:$upstream-port/header/",
        "upstreamRequest": {
          "headers": {
            "appends": {
              "x-one-value": [ "one" ],
              "x-two-values": [ "two" ]
            }
          }
        },
        "downstreamResponse": {
          "headers": {
            "appends": {
              "x-one-value": [ "one" ],
              "x-two-values": [ "two" ]
            }
          }
        }
      }
    }
  }
}
