{
  "routes": {
    "/api/": {
      "proxy": {
        "to": "https://localhost:$upstream-port/header/",
        "upstreamRequest": {
          "headers": {
            "overrides": {
              "x-one-value": [ "one-updated" ],
              "x-two-values": [ "one-updated", "two-updated" ],
              "x-expression": [ "$server_name/gwcore", "m:$request_method" ]
            }
          }
        },
        "downstreamResponse": {
          "headers": {
            "overrides": {
              "x-one-value": [ "one-updated" ],
              "x-two-values": [ "one-updated", "two-updated" ],
              "x-expression": [ "$server_name/gwcore", "m:$request_method" ]
            }
          }
        }
      }
    }
  }
}
