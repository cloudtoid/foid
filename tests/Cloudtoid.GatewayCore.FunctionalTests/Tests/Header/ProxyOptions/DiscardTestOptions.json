{
  "routes": {
    "/api/": {
      "proxy": {
        "to": "https://localhost:$upstream-port/header/",
        "upstreamRequest": {
          "headers": {
            "discardEmpty": true,
            "discardUnderscore": true,
            "discards": [ "x-one-value", "x-two-values" ]
          }
        },
        "downstreamResponse": {
          "headers": {
            "discardEmpty": true,
            "discardUnderscore": true,
            "discards": [ "x-one-value", "x-two-values" ]
          }
        }
      }
    }
  }
}
