{
  "routes": {
    "/api/": {
      "proxy": {
        "to": "https://localhost:$upstream-port/header/",
        "downstreamResponse": {
          "headers": {
            "cookies": {
              "sessionId": {
                "secure": true,
                "httpOnly": true,
                "sameSite": "lax",
                "domain": "new.com"
              },
              "*": {
                "secure": false,
                "httpOnly": false,
                "sameSite": "none",
                "domain": "default.com"
              },
              "emptyOut": {
                "secure": false,
                "httpOnly": false,
                "domain": ""
              }
            }
          }
        }
      }
    }
  }
}
